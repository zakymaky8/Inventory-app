<div class="album-detail">
    <div class="name-album">
        <h1><%= details[0].music_title %></h1><br>
        <p style="font-size: 10px;">single</p>
    </div>
    <div class="remaining-info">
        <div class="mini-details">
            <p><b>Artist Name: </b><strong><%= details[0].artist_name %></strong></p>
            <p><b>Release Year: </b> <strong><%= details[0].release_year %></strong></p>
            <p><b>Genre: </b><strong><%= details[0].genre %></strong></p>
            <p><b>Personal Rating: </b><strong><%= details[0].personal_rating %></strong></p>
            <p><b>Description: </b> <strong><%= details[0].description %></strong></p>
        </div>
        <div class="btns">
            <form onsubmit="return certify()" action='<%= '/delete_single/' + details[0].singles_id %> '  method="POST">
                <button title="delete" style="background: rgb(124, 9, 9);" type="submit">🗑️</button>
            </form>

            <form action="<%= '/singles/edit/' + details[0].singles_id %>" method="POST">
                <button title="edit" style="background: rgb(8, 8, 127);">✏️</button>
            </form>
        </div>
    </div>
</div>

<script>
    function certify() {
        const password = prompt("Enter password to confirm?");
        if (password === "2020") {
            return true
        } else {
            alert("Incorrect password. Action denied.");
            return false
        }
    }
</script>
