<form action="<%= mode === "create" ? '/single_added' : `/singles/edit/single/${single[0].singles_id}`  %>" method="POST" class="album-form">

    <div>
        <label for="album-title">Music Title: </label>
        <input type="text" name="music_title" id="album-title" required value="<%= mode === "create" ? "" :  single[0].music_title %>">
    </div>

    <div>
        <label for="artist-name">Artist Name: </label>
        <select name="artist_name" id="artist-name" required>
            <option value="" disabled selected>Select Artist</option>
            <% artists.map( artist => { %>
                <option value="<%= artist.artist_name %>"> <%= artist.artist_name %> </option>
            <% })  %>
        </select>
    </div>

    <div>
        <fieldset>
            <legend>Select Genres:</legend><br>
            <% const genres = ["Pop", "Rock", "Hip-Hop/Rap", "Jazz", "Electronic/Dance", "R&B/Soul", "Country", "Other"] %>
            <% genres.map(genre => { %>
                <label>
                    <input checked type="radio" name="genre" value="<%= genre  %>"> <%= genre %>
                </label><br>
            <% }) %>
        </fieldset>
    </div>

    <div>
        <label for="release-year">Release Year: </label>
        <input type="date" name="release_year" id="release-year" value="<%= mode === "create" ? "" :  single[0].release_year %>" required>
    </div>

    <div>
        <label for="personal-rating">Personal Rating: </label>
        <input type="number" name="personal_rating" id="personal-rating" min="0" max="10" value="<%= mode === "create" ? "" :  single[0].personal_rating %>" required>
    </div>
    <div>
        <label for="description">
            Description: <textarea rows="10" cols="30" name="description" required id="description"><%= mode === "create" ? "Describe Your Music ..." :  single[0].description %></textarea>
        </label>
    </div>

    <button type="submit"><%= mode==="edit" ? "Edit" : "Add" %></button>

</form>
