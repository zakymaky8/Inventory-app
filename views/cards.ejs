<div class="cards-list">
    <% if (items.length) { %>
        <% items.map(item => { %>
            <div class="card">
                <span style="color:rgb(239, 217, 13);font-size: 10px"><%= active %></span>
                <h1><%= item.artist_name  %></h1>
                <h3 style="color: coral;"><%= active==="from album" ? item.music_title : (item.album_title || item.music_title)  %></h3>
                <div class="oddsends">
                    <span><%= active==="from album" ? item.album_release_year : (item.album_release_year || item.release_year) %></span>
                    <span><%= active === "from album" ? item.personal_rating : (item.album_personal_rating || item.personal_rating) %></span>
                </div>
                <button onclick="window.location.href='/albums'">See Detail</button>
            </div>
        <% }) %>
    <% } else { %>
            <h1>No Item was found!</h1>
    <% } %>
</div>