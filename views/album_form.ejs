<form action="/album_added" method="POST" class="album-form">

    <div>
        <label for="album-title">Album Title: </label>
        <input type="text" name="album_title" id="album-title" value="<%= mode === "create" ? "" :  album[0].album_title %>">
    </div>

    <div>
        <label for="artist-name">Artist Name: </label>
        <select name="artist_name" id="artist-name" required>
                <option value="" disabled selected>Select Artist</option>
                <% artists.map( artist => { %>
                    <option value="<%= artist.artist_name %>"> <%= artist.artist_name %> </option>
                <% })  %>
        </select>
    </div>

    <div>
        <fieldset>
            <legend>Select Genres:</legend><br>

            <label>
                <input type="checkbox" name="genre" value="Pop" checked> Pop
            </label><br>

            <label>
                <input type="checkbox" name="genre" value="Rock"> Rock
            </label><br>

            <label>
                <input type="checkbox" name="genre" value="Hip-Hop/Rap"> Hip-Hop/Rap
            </label><br>

            <label>
                <input type="checkbox" name="genre" value="Jazz"> Jazz
            </label><br>

            <label>
                <input type="checkbox" name="genre" value="Electronic/Dance"> Electronic/Dance
            </label><br>

            <label>
                <input type="checkbox" name="genre" value="R&B/Soul"> R&B/Soul
            </label><br>

            <label>
                <input type="checkbox" name="genre" value="Country"> Country
            </label><br>

            <label>
                <input type="checkbox" name="genre" value="Other"> Other
            </label><br>
        </fieldset>
    </div>

    <div>
        <label for="release-year">Album Release Year: </label>
        <input type="date" name="release_year" id="release-year" value="<%= mode === "create" ? "" : album.album_release_year %>">
    </div>
    <div>
        <label for="cover-url">Paste cover url: </label>
        <input type="text" name="cover_url" id="cover-url" value="<%= mode === "create" ? "" : album.cover_url %>">
    </div>
    <div>
        <label for="personal-rating">Personal Rating: </label>
        <input type="number" name="personal_rating" id="personal-rating" min="0" max="10" value="<%= mode === "create" ? "" : album.personal_rating %>">
    </div>
    <div>
        <label for="fav-track">
            Most Fav Track <input type="text" name="most_fav_track" id="fav-track" value="<%= mode === "create" ? "" : album.most_fav_tracks %>">
        </label>
    </div>
    <div>
        <label for="description">
            Description: <textarea name="description" id="description"> <%= mode === "create" ? "Describe your album ...." : album.album_description %></textarea>
        </label>
    </div>

    <button type="submit">Add</button>

</form>
